{% extends "../baselayout.njk" %}

{% block title%}
<title>Novo contato</title>
{% endblock %}

{% block content %}
<div class="container">
    <div class="flex w-100 header create">
        <div class="title">
            <h3>Lista de contatos</h3>
        </div>
        <div class="new-contact">
            <a href="/contacts">Voltar</a>
        </div>
    </div>
    <div class="form-container">
        <form method="post" action="/contacts">
            <div class="item">
                <label for="avatarURL">URL da foto</label>
                <input class="input w-100" required name="avatarURL" id="avatarURL" type="url" placeholder="http://">
            </div>
            <div class="item">
                <label for="name">Nome</label>
                <input class="input w-100" required name="name" id="name" type="text" placeholder="Nome do contato">
            </div>
            <div class="item">
                <label for="number">Contato</label>
                <input class="input w-100" required name="number" id="number" type="tel" placeholder=" (DDD) 9xxxx-xxxx ">
            </div>
            <div class="item">
                <label for="birth">Data de nascimento</label>
                <input maxlength="8" class="input w-100" required name="birth" id="birth" type="date">
            </div>
            <div class="item">
                <label for="state">Estado</label>
                <input class="input w-100" required name="state" id="state" type="text" placeholder="Sigla do estado">
            </div>
            <div class="item">
                <label for="country">País</label>
                <input class="input w-100" required name="country" id="country" type="text" placeholder="Nome do País">
            </div>
            <input class="w-100" id="submit" type="submit" value="Salvar">
        </form>
    </div>
</div>
{% endblock %}

{% block scriptjs %}
<script defer type="text/javascript" src="/js/check-inputs.js" ></script>
{% endblock scriptjs %}
