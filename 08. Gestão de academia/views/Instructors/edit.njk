{% extends "../baselayout.njk" %}

{% block title %}
<title>Instrutores | {{instructor.name}}</title>
{% endblock %}

{% block content %}
<div class="center-container">
    <div class="card-container">
        <div style="background: url({{instructor.avatar}}) no-repeat top center /cover" class="card-image"></div>
        <div class="card-content">
            <form class="form-put"  action="/instructors?_method=PUT"  method="post">
                <h3>Editar Informações</h3>
                {% include "./fields.njk"%}
                <input value="{{instructor.id}}" type="hidden" name="id">
                <input class="w-100 button" type="submit" value="Salvar Edição">
            </form>
            <form class="form-delete" method="POST" action="/instructors?_method=DELETE">
                <input class="w-100 delete-button" type="submit" value="Apagar Cadastro">
                <input type="hidden" value="{{instructor.id}}" name="id">
            </form>
        </div>
    </div>
</div>
<script>
    const formDelete = document.querySelector(".form-delete")
    formDelete.addEventListener("submit",(event)=>{
        if (!window.confirm("Tem certeza que deseja deletar?"))
        event.preventDefault()
    })
</script>
{% endblock%}

{% block headScripts %}
{% include "../general-scrips.njk" %}
{% endblock %}
